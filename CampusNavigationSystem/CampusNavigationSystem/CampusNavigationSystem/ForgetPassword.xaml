<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampusNavigationSystem.ForgetPassword"
             Title="Forgot Password">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="15">
        <Entry x:Name="EmailEntry" Placeholder="Enter Your Registered Email" Keyboard="Email" />

        <!-- Button to send reset email -->
        <Button Text="Send Reset Email" BackgroundColor="Blue" TextColor="White" Clicked="OnSendEmailClicked" />

        <!-- New button to navigate to Reset Password page -->
        <Button Text="Go to Reset Password" BackgroundColor="Green" TextColor="White" Clicked="OnNavigateToResetPasswordClicked" />
    </StackLayout>
</ContentPage>
