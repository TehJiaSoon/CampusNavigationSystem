<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampusNavigationSystem.WelcomePage"
             Title="Welcome to Campus Navigation System!">
            
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20" BackgroundColor="White">

        <!-- Welcome Message -->
        <Image Source="welcome_logo.png"
               HeightRequest="150"
               HorizontalOptions="Center"/>
        
        <Label Text="Welcome to INTI's" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#4CAF50"/>

        <Label Text="Campus Navigation System" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#4CAF50"/>

        <!-- Brief Purpose -->
        <Label Text="Navigate INTI International University campus with ease. Find directions, explore facilities, and stay informed with this comprehensive system! Please feel free to use the features!"
               FontSize="18"
               HorizontalOptions="CenterAndExpand"
               HorizontalTextAlignment="Center"
               TextColor="Black"/>

        <!-- Feature Buttons -->
        <Button Text="Login"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="OnLoginClicked"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Register"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="OnRegisterClicked"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Contact Us"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="OnContactUsClicked"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Apply for Admin Privilege"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="OnApplyAdminPrivilegeClicked"
                HorizontalOptions="FillAndExpand"/>

    </StackLayout>
</ContentPage>
