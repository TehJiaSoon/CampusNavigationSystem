<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampusNavigationSystem.ApplyAdminPrivilegePage"
             Title="Apply for Admin Privilege">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20">
        <!-- Title -->
        <Label Text="Apply for Admin Privilege" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <!-- Username/Email Entry -->
        <Entry x:Name="UsernameOrEmailEntry" 
               Placeholder="Enter your username or email" 
               Keyboard="Email"
               FontSize="18" />

        <!-- Submit Button -->
        <Button Text="Submit Application"
                BackgroundColor="Green"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="OnSubmitApplicationClicked"
                HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>
